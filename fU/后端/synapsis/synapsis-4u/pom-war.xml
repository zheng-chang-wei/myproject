<?xml version="1.0"?>
<project
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd"
	xmlns="http://maven.apache.org/POM/4.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<groupId>com.hirain.phm</groupId>
		<artifactId>synapsis</artifactId>
		<version>1.0.0</version>
	</parent>
	<groupId>com.hirain.phm.synapsis</groupId>
	<artifactId>synapsis-4u</artifactId>
	<name>synapsis-4u</name>
	<packaging>war</packaging>
	<url>http://maven.apache.org</url>
	<properties>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
	</properties>
	<dependencies>
		<dependency>
			<groupId>com.hirain.phm.synapsis</groupId>
			<artifactId>communication-udp</artifactId>
			<version>1.0.0</version>
		</dependency>
		<dependency>
			<groupId>com.hirain.phm.synapsis</groupId>
			<artifactId>synapsis-common</artifactId>
		</dependency>
		<dependency>
			<groupId>com.h2database</groupId>
			<artifactId>h2</artifactId>
			<scope>test</scope>
		</dependency>
		<dependency>
			<groupId>com.hirain.phm.synapsis</groupId>
			<artifactId>synapsis-setting</artifactId>
		</dependency>
		<dependency>
			<groupId>com.hirain.phm.synapsis</groupId>
			<artifactId>synapsis-board</artifactId>
		</dependency>
		<dependency>
			<groupId>com.hirain.phm.synapsis</groupId>
			<artifactId>synapsis-setting-support</artifactId>
		</dependency>
		<dependency>
			<groupId>com.hirain.phm.synapsis</groupId>
			<artifactId>synapsis-mvb</artifactId>
		</dependency>
		<dependency>
			<groupId>com.hirain.phm.synapsis</groupId>
			<artifactId>synapsis-ecn</artifactId>
		</dependency>
		<dependency>
			<groupId>com.hirain.phm.synapsis</groupId>
			<artifactId>synapsis-runtime</artifactId>
		</dependency>
		<dependency>
			<groupId>org.springframework</groupId>
			<artifactId>spring-aop</artifactId>
		</dependency>
		<dependency>
			<groupId>org.aspectj</groupId>
			<artifactId>aspectjweaver</artifactId>
		</dependency>
		<dependency>
			<groupId>com.hirain.phm.synapsis</groupId>
			<artifactId>synapsis-algorithm</artifactId>
			<version>1.0.0</version>
		</dependency>
		<dependency>
			<groupId>org.springframework.boot</groupId>
			<artifactId>spring-boot-starter-web</artifactId>
			<exclusions>
				<exclusion>
					<groupId>org.springframework.boot</groupId>
					<artifactId>spring-boot-starter-tomcat</artifactId>
				</exclusion>
			</exclusions>
		</dependency>
		<dependency>
			<groupId>org.springframework.boot</groupId>
			<artifactId>spring-boot-starter-tomcat</artifactId>
			<scope>provided</scope>
		</dependency>
		<dependency>
			<groupId>org.apache.tomcat</groupId>
			<artifactId>tomcat-servlet-api</artifactId>
			<version>7.0.42</version>
			<scope>provided</scope>
		</dependency>
		<dependency>
			<groupId>com.hirain.phm.synapsis</groupId>
			<artifactId>synapsis-data</artifactId>
		</dependency>
		<dependency>
			<groupId>com.hirain.phm.synapsis</groupId>
			<artifactId>synapsis-result</artifactId>
		</dependency>
		<dependency>
			<groupId>com.hirain.phm.synapsis</groupId>
			<artifactId>synapsis-rbac</artifactId>
		</dependency>
		<dependency>
			<groupId>com.hirain.phm.synapsis</groupId>
			<artifactId>synapsis-log</artifactId>
		</dependency>
		<dependency>
			<groupId>com.hirain.phm.synapsis</groupId>
			<artifactId>synapsis-result-ecn</artifactId>
		</dependency>
		<dependency>
		  	<groupId>com.hirain.phm.synapsis</groupId>
		  	<artifactId>synapsis-update</artifactId>
        </dependency>
        <dependency>
		  	<groupId>org.springframework.boot</groupId>
		  	<artifactId>spring-boot-configuration-processor</artifactId>
		  	<optional>true</optional>
        </dependency>
	</dependencies>
	<build>
		<finalName>phm-api</finalName>
		<plugins>
			<plugin>
				<groupId>org.springframework.boot</groupId>
				<artifactId>spring-boot-maven-plugin</artifactId>
				<executions>
					<execution>
						<goals>
							<goal>repackage</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>
</project>
